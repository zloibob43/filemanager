<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.zloibob43.filemanager.PanelController">
    <HBox>
        <ComboBox fx:id="disks" onAction="#selectDiskAction"/>
        <TextField fx:id="pathField" HBox.hgrow="ALWAYS" editable="false"/>
        <Button text="Вверх" onAction="#btnPathUpAction"/>
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS"/>

    <properties>
        <ctrl><fx:reference source="controller"/> </ctrl>
    </properties>
</VBox>
